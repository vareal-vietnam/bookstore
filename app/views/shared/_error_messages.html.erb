<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <%=t('.the_form_contains')%> <%= pluralize(@user.errors.count, t('.errors')) %>.
    </div>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
