<div class="row">
  <div class="col-sm-1"></div>
  <% if @user %>
  <div class="col-sm-4">
    <div class="col-sm-2"></div>
    <div class="col-sm-8">
      <img src="<%= @user.avatar&.url %>" class="user-avatar">
    </div>
    <div class="col-sm-2"></div>
  </div>
  <div class="col-sm-4">
    <div class="row">
      <p><b><%= @user.name %></b></p>
    </div>
    <div class="row">
      <%= @user.address %>
    </div>
    <div class="row">
      <%= @user.phone %>
    </div>
    <% if current_user.id == params[:id].to_i %>
      <div class="row">
        <a href="#" class="btn btn-primary"><%= t('.cap_nhat') %></a>
      </div>
    <% end %>
  </div>
<% end %>
  <div class="col-sm-3"></div>
</div>




