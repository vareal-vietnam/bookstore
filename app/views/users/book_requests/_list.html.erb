<% book_requests.each do |book_request| %>
  <%= link_to user_book_request_path current_user, book_request do %>
    <div class="col-md-3 book-request">
      <div class="row">
        <img src="<%= book_request.book_request_images.first.thumb_url %>
          "alt = "Book's cover" class="book-request-image">
        <div class="col-md-12 book-request-content" >
          <p class="book-request-name"> <%= truncate(book_request.name, length: 25) %></p>
          <p class="book-request-detail"><%=t('book_request.buyer') %>
            <%= book_request.buyer_name %></p>
          <p class="book-request-detail"><%= t('book_request.quantity') %>
            <%= book_request.quantity %>
          </p>
          <p class="book-request-detail"><%= t('book_request.budget') %>
            <%= book_request.budget %>
          </p>
          <p class="book-request-detail"><span title="<%= book_request.comment %>">
            <%= truncate(book_request.comment, length: 25) %></span>
          </p>
          <%= link_to '', edit_user_book_request_path(current_user, book_request), class: "glyphicon glyphicon-edit"%>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
