<h1><%= t('users.edit.change_password') %> </h1>
<%= render partial: 'shared/error_messages', locals: {object: current_user} %>
<%= form_for current_user do |f| %>
  <div class="form-group">
    <%= f.label "#{t('users.edit.old_password')} (*)" %>
    <%= f.password_field :old_password, class: 'form-control', required: true, pattern: ".{6,}", title: "Minimun is 6 characters" %>
  </div>

  <div class="form-group">
    <%= f.label "#{t('users.edit.password')} (*)" %>
    <%= f.password_field :password, class: 'form-control', required: true, pattern: ".{6,}", title: "Minimun is 6 characters" %>
  </div>

  <div class="form-group">
    <%= f.label "#{t('users.edit.password_confirmation')} (*)" %>
    <%= f.password_field :password_confirmation, class: 'form-control', required: true, pattern: ".{6,}", title: "Minimun is 6 characters" %>
  </div>

  <div class="form-check text-center">
    <%= f.submit t('users.edit.change_password'), class: "btn btn-primary container col-sm-6 col-sm-offset-3" %>
  </div>
<% end %>
