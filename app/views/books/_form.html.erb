<div class="row">
  <%= form_for(@book, html: {class: 'form-group'} ) do |f| %>
    <div class="col-sm-8 col-sm-offset-2">
      <div class="col-sm-5 text-right">
        <%= render 'shared/image_previewer', book_cover: @book.images.first&.url %>
      </div>
      <div class="col-sm-6">
        <%= render partial: 'shared/error_messages', locals: {object: @book} %>
        <div class="form-group">
          <%= f.label "#{t('book.name')}" %><span class="required">*</span>
          <%= f.text_field :name, class: 'form-control', maxlength: 60, required: true, onchange: "trimString(0)" %>
        </div>
        <div class="row">
          <div class="col-sm-6">
            <div class="form-group">
            <%= f.label "#{t('book.quantity')}" %><span class="required">*</span>
            <%= f.number_field :quantity, class: 'form-control number-field', min: 0, max: 1000, required: true %>
            </div>
          </div>
          <div class="col-sm-6">
            <div class="form-group">
              <%= f.label "#{t('book.price')}" %><span class="required">*</span>
              <%= f.number_field :price, class: 'form-control number-field', min: 0, max: 99_999_000, required: true %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <%= f.label "#{t('book.description')}" %><span class="required">*</span>
          <%= f.text_area :description, class: 'form-control', rows: "4", required: true, onchange: "trimString(3)" %>
        </div>
        <div class="form-group">
          <%= f.label t('book.comment') %>
          <%= f.text_area :comment, class: 'form-control', rows: "4", onchange: "trimString(4)" %>
        </div>
        <div class="form-group">
          <%= f.file_field :files, accept: "image/*", multiple: true, id: "image-upload" %>
          <i><%= t('.file_input_warning') %></i>
        </div>
        <div class="form-check text-center">
          <%= f.submit submit_label, class: "btn btn-primary col-sm-4 col-sm-offset-4" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
