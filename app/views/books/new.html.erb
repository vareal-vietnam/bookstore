<div class="row">
  <%= form_for(@book, html: {class: 'form-group'} ) do |f| %>
    <div class="col-sm-8 col-sm-offset-2">
      <div class="col-sm-5 text-right">
        <img
          id="img_prev"
          src="<%= ActionController::Base.helpers.image_path('default-book-cover.jpg') %>"
          alt="Book's cover"
          class="img-thumbnail book-image"
        />
      </div>
      <div class="col-sm-6">
        <%= render partial: 'shared/error_messages', locals: {object: @book} %>
        <div class="form-group">
          <%= f.label t('book.name') %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="row">
          <div class="col-sm-6">
            <div class="form-group">
            <%= f.label t('book.quantity') %>
            <%= f.number_field :quantity, class: 'form-control' %>
            </div>
          </div>
          <div class="col-sm-6">
            <div class="form-group">
              <%= f.label t('book.price') %>
              <%= f.number_field :price, class: 'form-control'  %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <%= f.label t('book.description') %>
          <%= f.text_area :description, class: 'form-control', rows: "4" %>
        </div>
        <div class="form-group">
          <%= f.label t('book.comment') %>
          <%= f.text_area :comment, class: 'form-control', rows: "4" %>
        </div>
        <div class="form-group">
          <%= f.file_field :images, accept: "image/*", id: "avatar-upload" %>
        </div>
        <div class="form-check text-center">
          <%= f.submit t('book.create'), class: "btn btn-primary col-sm-4 col-sm-offset-4" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
