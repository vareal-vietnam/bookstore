<div class="row">
  <div class="col-md-4 col-md-offset-3">
    <h1><%= t('.login') %></h1>
    <%= form_for(:session, url: sessions_path, html: {class: 'form-group'} ) do |f| %>
    <div class="form-group">
      <%= f.label t('.phone') %>
      <%= f.phone_field :phone, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label t('.password') %>
      <%= f.password_field :password, class: 'form-control' %>
    </div>
    <div class="form-check">
      <%= f.submit t('.sign_in_now'), class: "btn btn-primary" %>
    </div>
    <% end %>
      <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-sm-11">
          <%= t('.new_user') %> &nbsp; <span class="underline"><%= link_to t('.sign_up_now'), new_user_path %></span>
        </div>
      </div>
  </div>
</div>
